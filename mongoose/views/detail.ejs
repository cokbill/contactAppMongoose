<div class="container mt-3 mb-2">
    <div class="row">
        <div class="col-md-8">
            <h2>contact detail</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger font-weight-bold" role="alert">
                    data contact tidak ditemukan! <br>
                    <a href="/contact" class="alert-link font-weight-normal">&laquo; kembali ke daftar contact </a>. 
                  </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/edit/<%=contact.nama%>" class="btn btn-info badge">edit</a>
                  <a href="/contact/delete/<%=contact.nama%>" class="btn btn-danger badge" onclick="return confirm('yakin ?')">Delete</a>
                  <a href="/contact" class="card-link d-block mt-2">&laquo; back </a>
              </div>
        </div>
  <% } %>   
    </div>
</div>